<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/Choise_fild"
        android:textSize="40sp"
        android:textColor="#850BFF">

    </androidx.appcompat.widget.AppCompatTextView>

    <Button
        android:id="@+id/Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Film3"
        android:layout_marginTop="20dp"
        android:text="Назад">

    </Button>

    <CheckBox
        android:id="@+id/Film2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Фильм2"
        android:textSize="25sp"
        android:textColor="#0342FF">

    </CheckBox>

    <CheckBox
        android:id="@+id/Film3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/Film2"
        android:text="Фильм3"
        android:textSize="25sp"
        android:textColor="#0342FF">

    </CheckBox>

    <CheckBox
        android:id="@+id/Film1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Film2"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Фильм1"
        android:textSize="25sp"
        android:textColor="#0342FF">

    </CheckBox>

</androidx.constraintlayout.widget.ConstraintLayout>