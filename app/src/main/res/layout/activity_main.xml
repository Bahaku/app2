<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/choise1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
      app:layout_constraintBottom_toTopOf="@+id/choise2"
      android:layout_marginBottom="20dp"
       android:hint="Выбор1">

   </TextView>

   <TextView
      android:id="@+id/choise2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       app:layout_constraintTop_toBottomOf="parent"
       android:hint="@string/choise1"
       app:layout_constraintBottom_toTopOf="parent">

   </TextView>

   <TextView
      android:id="@+id/choise3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
      app:layout_constraintTop_toBottomOf="@id/choise2"
      android:layout_marginTop="20dp"
      android:hint="Выбор3">

   </TextView>

   <Button
       android:id="@+id/Goo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Вперёд"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/choise3"
      android:layout_marginTop="20dp">

   </Button>



</androidx.constraintlayout.widget.ConstraintLayout>